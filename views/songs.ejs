<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Songs</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    
 <% if (message) {   %> 
  <div class="row justify-content-md-center">
    <div class="alert alert-primary" role="alert">
          <%= message %>
    </div>
  </div>

<% } %>

<% if(user) { %>
<h1 class="text-justify"> Songs  </h1>
<div class="col-md-12 col-md-offset-2  justify-content-center">
  <a role="button" class="btn btn-outline-success" href="/create-song">Create a new song</a>

</div>

<%}%>
  
  <div class="col-md-12 col-md-offset-2">
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            
            <th>Title</th>
            <th>Genre</th>
            <th>Artist</th>
            <th>Difficulty</th>
            <th>Completion</th>

        </tr>

        <%  
        
          songs.forEach(song => {
            
        %>

            <tr>
           
                <td><%=  song.title  %></td>
                <td><%=  song.genre  %></td>
                <td><%=  song.artist  %></td>
                <td><%=  song.difficulty  %></td>
                <td><%=  song.completion  %></td>
                
                <% if(user) { %>
                <td class="text-center"><a class='btn btn-outline-primary' href="/songs/update/<%= song.id %>" ><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                  <a  href="/songs/delete/<%= song.id %>" class="btn btn-outline-danger"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                 
                 <%}%>
            </tr>
            
         <%  
          });
         %>


       
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>
